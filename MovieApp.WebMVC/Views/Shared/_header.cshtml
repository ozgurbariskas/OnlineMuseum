<header class="sticky-top">
    <div class="collapse bg-dark" id="navbarHeader">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-md-7 py-4">
                    <h4 class="text-white">About</h4>
                    <p class="text-muted">Nothing</p>
                </div>
                <div class="col-sm-4 offset-md-1 py-4">
                    <ul class="list-unstyled">
                        @if (User.Identity.IsAuthenticated)
                        {

                            <li><a class=" btn btn-sm btn-danger" asp-controller="User" asp-action="Logout"><i class="glyphicon glyphicon-remove"></i>Logout</a></li>
                            <li><a class="btn bg-light" href="/Admin/Exhibition/Index">Manage Exhibitions</a></li>
                        }
                        else
                        {
                            <li><a class=" btn btn-sm btn-success" asp-controller="User" asp-action="Login"><i class="glyphicon glyphicon-remove"></i>Login</a></li>

                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="navbar navbar-dark bg-dark shadow-sm">
        <div class="container d-flex justify-content-between">
            <a asp-controller="Home" asp-action="Index" class="navbar-brand d-flex align-items-center">
                <strong>Museum</strong>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarHeader" aria-controls="navbarHeader" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </div>
</header>
